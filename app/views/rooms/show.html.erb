<% exceeds_limit = current_room_exceeds_limit(@room)%>
<% if exceeds_limit%>
  <div class="alert alert-danger alert-dismissible text-center mb-0">
    <%= t("room.room_limit_exceeded", difference: @diff) %>
  </div>
<% end %>
<div class="pb-1 position-relative">
  <div class="container mt-7">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <div id="room-title" class="d-flex align-items-center justify-content-between display-3 text-white form-inline <%= 'edit_hover_class' if current_user.main_room != @room %>" data-path="<%= update_settings_path(@room) %>">
           <h1 contenteditable=false id="user-text" class="display-3 text-left mb-3 font-weight-600"><%= title(@room.name) %>
          
           <% if false %>
           remove-color-platte
           <% if current_user.role.get_permission("can_custom_branding") || current_user.role.get_permission("can_full_custom_branding") || @current_user.role.name === 'Admin' %>
            <span href="#" data-toggle="modal" data-target="#roomBrandingModal"  class="icon update-branding cursor-pointer">
              <i class="fa fa-regular fa-palette text-white"></i>
            </span>
            <% end %>
            <% end %>

           </h1>
          <%# if current_user.main_room == @room %>
            <%#a class="disable-click"><i class="fas fa-home align-top home-indicator ml-2"></i></a>
          <% else %>
            <%#a><i id="edit-room" class="fa fa-edit align-top home-indicator ml-2" data-edit-room="<%= @room.uid %><%# "></i></a>
          <% end %>

          <% if current_user.ordered_rooms.length > 5 %>
            <div class="input-icon">
              <span class="input-icon-addon">
                <i class="fas fa-search"></i>
                </span>
              <input id="room-search" type="text" placeholder="<%= t("room.search") %>" class="form-control w-100" onChange="filterRooms()" onKeyUp="filterRooms()" style="background: rgba(255,255,255,0.85);">
              <span id="clear-room-search" class="text-primary" onclick="clearRoomSearch()">
                <i class="fas fa-times"></i>
              </span>
            </div>
          <% end %>
          
        </div>
        <p class="text-left mb-6 text-light"><%= @room.sessions %> <%= t("room.sessions") %><% unless hide_recording_tables %> | <%= @recordings.length %> <%= t("room.recordings") %><% end %></p>
        <% unless exceeds_limit %>
      </div>

      

    </div>

    

    <div id="room_block_container">
    <div class="row padding-30">
      <div class="col-lg-9 col-sm-12">
          <label class="form-label"><%= t("room.invite_participants") %></label>
          <div class="row">
            <div class="col-lg-6 col-md-12 mt-2">
              <div class="input-icon invite-link-input">
                <span class="input-icon-addon">
                  <i class="fas fa-link"></i>
                </span>
                <input id="invite-url" type="text" class="form-control w-100" value="<%= request.base_url + @room.invite_path %>" readonly="">
              </div>
            </div>
            <div class="col-lg-6 pr-lg-7 col-md-12 pl-lg-0">
              <div class="row">
                <div class="col-sm-2 mt-2">
                  <button id="copy-invite" class="btn btn-primary btn-block" onclick="copyInvite()">
                    <i class="fas fa-copy mr-1"></i>
                    <%#= t("copy") %>
                  </button>
                </div>

                <%# add-color-platte%>

                <div class="col-sm-2 mt-2">
                <% if current_user.role.get_permission("can_custom_branding") || current_user.role.get_permission("can_full_custom_branding") || @current_user.role.name === 'Admin' %>
                  <button href="#" data-toggle="modal" data-target="#roomBrandingModal"  class="icon update-branding cursor-pointer btn btn-primary btn-block">
                  <i class="fa fa-regular fa-palette text-white"></i>
                  </button>
                <% end %>
                </div>

                <% if @room.access_code.present? %>
		              <div class="col-sm-2 mt-2 mx-n2">
                      <input id="copy-code" value="<%= @room.access_code %>" type="hidden">
                      <button id="copy-access" class="btn btn-secondary btn-block" onclick="copyAccess()">
                        <i class="fas fa-key mr-1"></i>
                        <%#= t("room.copy_access") %>
                      </button>
		              </div>
                <% end %>
		<div class="col-sm-2 mt-2">
                  <% if Rails.configuration.enable_google_calendar_button %>
                    <a href="<%= google_calendar_path %>" target="__blank" id="schedule" class="btn btn-primary btn-block ">
                      <i class="fas fa-calendar"></i>
                      <%#= t("add_to_google_calendar") %>
                    </a>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
       <div class="col-lg-3 col-sm-12 force-bottom mt-5">
        <% if @room_running %>
          <%= button_to t("room.join"), room_path(@room), class: "btn btn-primary btn-block px-7 start-button float-right", "data-disable": "", :onclick=>"return joinAttendee('"+Rails.configuration.attendees_post_endpoint+"','"+@room.bbb_id.to_s+"','"+current_user.name.to_s+"','"+current_user.email.to_s+"','VIEWER','"+current_user.image.to_s+"','OLD',this.form)" %>
        <% else %>
          <% unless exceeds_limit %>
            <%= button_to t("room.start"), start_room_path(@room), class: "btn btn-primary btn-block px-7 start-button float-right", "data-disable": "", onclick:"return joinAttendee('"+Rails.configuration.attendees_post_endpoint+"','"+@room.bbb_id.to_s+"','"+current_user.name.to_s+"','"+current_user.email.to_s+"','MODERATOR','"+current_user.image.to_s+"','NEW',this.form)" %>
          <% end %>
        <% end %>
      </div>
      </div>
    <hr class="m-0" />
    <div class="row padding-30">
      <% if current_user.role.get_permission("can_create_rooms") %>
        <% current_user.ordered_rooms.each do |room| %>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <%= link_to room do %>
              <%= render "rooms/components/room_block", room: room %>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <% if shared_access_allowed %>
        <% current_user.shared_rooms.each do |room| %>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <%= link_to room do %>
              <%= render "rooms/components/shared_room_block", room: room %>
            <% end %>
          </div>
        <% end %>
      <% end %>

      <% if current_user.role.get_permission("can_create_rooms") && !room_limit_exceeded %>
        <%= render "rooms/components/create_room_block"%>
      <% end %>
      </div>
    </div>
  </div>
</div>

<% unless hide_recording_tables %>
  <%= render "shared/sessions", recordings: @recordings, pagy: @pagy, only_public: false, shared_room: @shared_room, user_recordings: false, title: t("room.recordings")%>
<% end %>

<%= render "shared/modals/delete_room_modal" %>

<%= render "shared/modals/create_room_modal" %>

<%= render "shared/modals/room_branding_modal" %>

<% if preupload_allowed? %>
  <%= render "shared/modals/preupload_presentation_modal" %>
<% end %>

<% if shared_access_allowed %>
  <%= render "shared/modals/share_room_modal" %>
  <%= render "shared/modals/remove_access_modal" %>
<% end %>
